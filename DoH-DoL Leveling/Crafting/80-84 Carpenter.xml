<Profile>
<Name>Crafting Carpenter to 84</Name>
<Order>

	<!-- Check to see if have collectables -->
	<While Condition="(ItemCount(25199) &gt; 249) or (HasItem(35626)) or (HasItem(35627))">
		<While Condition="(HasItem(35626)) or (HasItem(35627))">
			<Lisbeth Json="[{'Group':5,'Amount':1,'Enabled':true,'Type':'RetainerRefresh'}]"/>
		</While>		
		<While Condition="ItemCount(25199) &gt; 249"> <!-- 25199 = White Crafters' Scrip Scrip -->
			<BuyInclusionShopItem ItemId="33927" Count="1"/>
		</While>
	</While>
	
	<!-- 80-82  -->
	<If Condition="(Core.Me.Levels[ClassJobType.Carpenter] &gt; 79) and  (Core.Me.Levels[ClassJobType.Carpenter] &lt; 82)">
		<If Condition="ClassName != ClassJobType.Carpenter">
			<ChangeClass Job="Carpenter"/>
		</If>
		<If Condition="ClassName == ClassJobType.Carpenter">
			<AutoInventoryEquip/>
			<WaitTimer WaitTime="5"/>
			<Lisbeth Json="[{'Group':1,'Item':35626,'Amount':5,'Enabled':true,'Type':'Carpenter','Collectable':false, 'ConditionalJob':'Carpenter'},{'Group':5,'Amount':1,'Enabled':true,'Type':'RetainerRefresh'}]"/>
		</If>
	</If>

	<!-- Check to see if have collectables -->
	<While Condition="(ItemCount(25199) &gt; 249) or (HasItem(35626)) or (HasItem(35627))">
		<While Condition="(HasItem(35626)) or (HasItem(35627))">
			<Lisbeth Json="[{'Group':5,'Amount':1,'Enabled':true,'Type':'RetainerRefresh'}]"/>
		</While>		
		<While Condition="ItemCount(25199) &gt; 249"> <!-- 25199 = White Crafters' Scrip Scrip -->
			<BuyInclusionShopItem ItemId="33927" Count="1"/>
		</While>
	</While>
	
	<!-- 80-82  -->
	<If Condition="(Core.Me.Levels[ClassJobType.Carpenter] &gt; 81) and  (Core.Me.Levels[ClassJobType.Carpenter] &lt; 84)">
		<If Condition="ClassName != ClassJobType.Carpenter">
			<ChangeClass Job="Carpenter"/>
		</If>
		<If Condition="ClassName == ClassJobType.Carpenter">
			<AutoInventoryEquip/>
			<WaitTimer WaitTime="5"/>
			<Lisbeth Json="[{'Group':1,'Item':35627,'Amount':5,'Enabled':true,'Type':'Carpenter','Collectable':false, 'ConditionalJob':'Carpenter'},{'Group':5,'Amount':1,'Enabled':true,'Type':'RetainerRefresh'}]"/>
		</If>
	</If>

	<!-- Check to see if have collectables -->
	<While Condition="(ItemCount(25199) &gt; 249) or (HasItem(35626)) or (HasItem(35627))">
		<While Condition="(HasItem(35626)) or (HasItem(35627))">
			<Lisbeth Json="[{'Group':5,'Amount':1,'Enabled':true,'Type':'RetainerRefresh'}]"/>
		</While>		
		<While Condition="ItemCount(25199) &gt; 249"> <!-- 25199 = White Crafters' Scrip Scrip -->
			<BuyInclusionShopItem ItemId="33927" Count="1"/>
		</While>
	</While>
	
	<If Condition="Core.Me.Levels[ClassJobType.Carpenter] &lt; 84">		
		<WaitTimer WaitTime="5"/>
		<LLoadProfile Path="80-84 Carpenter.xml"/>
	</If>

	<!-- Load Start -->
	<LogMessage Message="Congrats on Level 84 on Carpenter, moving on."/>
	<AutoInventoryEquip/>
	<WaitTimer WaitTime="5"/>
	<LLoadProfile Path="../Start.xml"/>
	
</Order>
<CodeChunks>
	<CodeChunk name="Leave">
	<![CDATA[
		if (DutyManager.InInstance)
		{
		DutyManager.LeaveActiveDuty();
		if (await Coroutine.Wait(30000, () => CommonBehaviors.IsLoading))
		{
		await Coroutine.Yield();
		await Coroutine.Wait(Timeout.Infinite, () => !CommonBehaviors.IsLoading);
		await Coroutine.Sleep(1000);
		}
		}
	]]>
	</CodeChunk>
	<CodeChunk Name="TurnIn">
	<![CDATA[
		Logging.Write("[Handin] calling");
		await LlamaLibrary.Utilities.Ishgard.Handin();
	]]>
	</CodeChunk>
</CodeChunks>
</Profile>