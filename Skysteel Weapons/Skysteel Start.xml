<?xml version="1.0" encoding="utf-8"?>
<!--
Author: Angles24 / Kayla
Required: LLamaLibrary BotBase
		  Lisbeth BotBase
		  Exbuddy Plugin
          ALL currently obtained Skysteel weapons in inventory or Armory.
-->
<!DOCTYPE Profile [
<!-- Profile Settings -->
<!ENTITY crp "1"><!-- If you don't want to collect a certain weapon change "1" to "0" -->
<!ENTITY bsm "1">
<!ENTITY arm "1">
<!ENTITY gsm "1">
<!ENTITY ltw "1">
<!ENTITY wvr "1">
<!ENTITY alc "1">
<!ENTITY cul "1">
<!ENTITY min "0">
<!ENTITY btn "0">
<!ENTITY fsh "0">
]>
<Profile>
	<Name>Skysteel Start</Name>
	<Order>
	
	<RunCode Name="Disable_Flight"/>
	
		<If Condition="&crp; == 1">
			<If Condition="Core.Me.Levels[ClassJobType.Carpenter] &gt; 79 and not HasItem(30293)">
				<LLoadProfile Path="Profiles/Skysteel CRP Weapons.xml"/>
			</If>
		</If>
		<If Condition="&bsm; == 1">
			<If Condition="Core.Me.Levels[ClassJobType.Blacksmith] &gt; 79 and not HasItem(30294)">
				<LLoadProfile Path="Profiles/Skysteel BSM Weapons.xml"/>
			</If>
		</If>
		<If Condition="&arm; == 1">
			<If Condition="Core.Me.Levels[ClassJobType.Armorer] &gt; 79 and not HasItem(30295)">
				<LLoadProfile Path="Profiles/Skysteel ARM Weapons.xml"/>
			</If>
		</If>
		<If Condition="&gsm; == 1">
			<If Condition="Core.Me.Levels[ClassJobType.Goldsmith] &gt; 79 and not HasItem(30296)">
				<LLoadProfile Path="Profiles/Skysteel GSM Weapons.xml"/>
			</If>
		</If>
		<If Condition="&ltw; == 1">
			<If Condition="Core.Me.Levels[ClassJobType.Leatherworker] &gt; 79 and not HasItem(30297)">
				<LLoadProfile Path="Profiles/Skysteel LTW Weapons.xml"/>
			</If>
		</If>
		<If Condition="&wvr; == 1">
			<If Condition="Core.Me.Levels[ClassJobType.Weaver] &gt; 79 and not HasItem(30298)">
				<LLoadProfile Path="Profiles/Skysteel WVR Weapons.xml"/>
			</If>
		</If>
		<If Condition="&alc; == 1">
			<If Condition="Core.Me.Levels[ClassJobType.Alchemist] &gt; 79 and not HasItem(30299)">
			<LLoadProfile Path="Profiles/Skysteel ALC Weapons.xml"/>
			</If>
		</If>
		<If Condition="&cul; == 1">
			<If Condition="Core.Me.Levels[ClassJobType.Culinarian] &gt; 79 and not HasItem(30300)">
				<LLoadProfile Path="Profiles/Skysteel CUL Weapons.xml"/>
			</If>
		</If>
		<If Condition="&btn; == 1">
			<If Condition="Core.Me.Levels[ClassJobType.Botanist] &gt; 79 and not HasItem(30301)">
				<LLoadProfile Path="Profiles/Skysteel BTN Weapons.xml"/>
			</If>
		</If>
		<If Condition="&min; == 1">
			<If Condition="Core.Me.Levels[ClassJobType.Miner] &gt; 79 and not HasItem(30302)">
				<LLoadProfile Path="Profiles/Skysteel MIN Weapons.xml"/>
			</If>
		</If>
		<If Condition="&fsh; == 1">
			<If Condition="Core.Me.Levels[ClassJobType.Fisher] &gt; 79 and not HasItem(29644)">
				<LLoadProfile Path="Profiles/Skysteel FSH Weapons.xml"/>
			</If>
		</If>
	
	

	<LogMessage Message="Congrats on getting all the Skysteel Weapons you wanted."/>
	<RunCode Name="finish"/>
	
	</Order>
	<CodeChunks>
		<CodeChunk Name="finish">
		<![CDATA[
			Core.OverlayManager.AddToast(() => "Congrats on getting all the Skysteel Weapons you wanted.\n:)", TimeSpan.FromMilliseconds(25000), System.Windows.Media.Color.FromRgb(29,213,226), System.Windows.Media.Color.FromRgb(13,106,175), new System.Windows.Media.FontFamily("Gautami"));
			await Coroutine.Sleep(40000);
		]]>
		</CodeChunk>
		<CodeChunk Name="Disable_Flight">
		<![CDATA[
			foreach (var plugin in PluginManager.Plugins.Where(p => p.Plugin.Name == "Enable Flight" || p.Plugin.Name == "启用飞行"))
			{
			try
			{
				if (!plugin.Enabled)  {  break;  }  else  {  plugin.Enabled = false;  }
			}
			catch (Exception ex) {  }
			}
		]]>
		</CodeChunk>
	</CodeChunks>
</Profile>